{{#extends 'base'}}

{{#block 'content'}}
<h1>Movies</h1>
<!-- since we are searching the database, i.e
retriving information, we are adding any new data
, hence we should use GET -->
<form method="GET">
    <input type="text" placeholder="Search terms" class="form-control" name="search_terms"/>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Actor ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Last Update</th>
        </tr>
    </thead>
    
    {{#each actors}}
    <tr>
        <td>{{this.actor_id}}</td>
        <td>{{this.first_name}}</td>
        <td>{{this.last_name}}</td>
        <td>{{this.last_update}}</td>
    </tr>
    {{/each}}
</table>

{{/block}}

{{/extends}}